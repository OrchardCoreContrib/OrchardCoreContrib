<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <VersionPrefix>1.0.0</VersionPrefix>
    <Authors>The Orchard Core Contrib Team</Authors>
    <Company />
    <Description>Provides an abstractions APIs for localization.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/OrchardCoreContrib/OrchardCoreContrib</PackageProjectUrl>
    <RepositoryUrl>https://github.com/OrchardCoreContrib/OrchardCoreContrib</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <PackageTags>Orchard Core, Orchard Core Contrib, Localization</PackageTags>
    <PackageReleaseNotes>https://github.com/OrchardCoreContrib/OrchardCoreContrib/releases</PackageReleaseNotes>
    <PackageId>OrchardCoreContrib.Localization.Abstractions</PackageId>
    <Product>Orchard Core Contrib Localization Abstractions</Product>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Copyright>2019 Orchard Core Contrib</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="OrchardCore.Localization.Abstractions" Version="1.0.0-rc1-10004" />
  </ItemGroup>

</Project>
